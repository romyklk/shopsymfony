{% extends 'base.html.twig' %}

{% block title %}Réinitialisez votre mot de passe|{{parent()}}
{% endblock %}

{% block body %}

	<div class="container">


		<div class="row">
			<div class="col-5 m-auto  shadow-lg bg-light py-5 px-3">
				<h4 class="text-center">Réinitialisez votre mot de passe</h4>
				<hr>
				<div class="row text-center">
					{% for flash_error in app.flashes('reset_password_error') %}
						<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
					{% endfor %}
				</div>
				{{ form_start(requestForm) }}
				{{form_widget(requestForm.email,{'attr':{'placeholder':'Entrez votre E-mail'}})}}
				{{form_errors(requestForm.email)}}
				<div class='mt-3 mb-3 text-center'>
					<small>
						Entrez votre adresse e-mail et nous vous enverrons un
																								                 lien pour réinitialiser votre mot de passe.
					</small>
				</div>
				<div class="d-grid gap-2 mx-auto">
					<button class="btn btn-primary">Envoyer un e-mail de réinitialisation du mot de passe</button>
					{{ form_end(requestForm) }}
				</div>
			</div>
		</div>

	</div>

{% endblock %}
