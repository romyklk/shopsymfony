{{ form_start(form) }}
<div class="container">
	<div class="row">
		<div class="col-md-10 col-md-offset-1">
			<div class="row">
				<div class="col-md-6 col-sm-12">
					<div class="form-group">
						{{ form_row(form.name) }}
					</div>
					<div class="form-group">
						{{ form_row(form.email) }}
					</div>
					<div class="form-group">
						{{ form_row(form.phone) }}
					</div>
					<div class="form-group">
						{{ form_row(form.subject) }}
					</div>
				</div>
				<div class="col-md-6 col-sm-12">
					<div class="form-group">
						{{ form_row(form.message, {'attr': {'rows': 8}}) }}
					</div>
					<div class="form-group">
						<div class="d-grid gap-2 col-1 mx-auto my-2">
							<button class="btn btn-success">{{ button_label|default('Envoyer') }}</button>
						</div>
					</div>
				</div>

			</div>
		</div>
	</div>
</div>
{{ form_end(form) }}
