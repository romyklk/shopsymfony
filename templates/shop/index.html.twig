{% extends 'base.html.twig' %}

{% block title %}Boutique -
	{{parent()}}
{% endblock %}



{% block body %}
	{% set pageName = "Boutique" %}
	<div class="container-fluid m-0">
		{% include "partials/_pagetitle.html.twig" %}
	</div>

	<div class="container">

		<div class="row">
				<div class="col-lg-4 d-none d-lg-block">

				{{form_start(search)}}
				<div class="card" style="width: 18rem;">
					<div class="card-header h4 text-center bg-primary text-white">
						Catégorie
					</div>
					{# <ul class="list-group list-group-flush">
																										{% for categorie in categories %}
																											<li class="list-group-item">{{categorie.name}}</li>
																										{% endfor %}
																									</ul> #}
					{{form_row(search.categories)}}
				</div>
				<div class="card-body mt-2">
					<div class="form-row d-flex justify-content-start">
						<div class="form-group col-md-4 col-12 search_product_categories">
							{{form_row(search.priceMin)}}
						</div>
						<div class="form-group col-md-4 col-12 .search_product_categories_right">
							{{form_row(search.priceMax)}}
						</div>
					</div>

				</div>

				<div class="card-body mt-2">
					<div class="form-row">
						<div class="form-group col-md-8">
							{{form_row(search.tags)}}
						</div>
					</div>

				</div>
				<button type="submit" class="btn btn-primary">Rechercher</button>
				{{form_end(search)}}

			</div>

			<div class="col-lg-8 col-12">

				<div class="row text-center d-none d-lg-block mb-3">
					<h3>Découvrez nos produits les plus populaires</h3>
				</div>
				<div class="row row-cols-1 row-cols-md-2 g-3">


					{% for product in products %}

						{% include "partials/_product_shop.html.twig" %}

					{% endfor %}

				</div>
			</div>

			<!--Pagination-->


		</div>
	</div>


{% endblock %}
