{% extends 'base.html.twig' %}

{% block title %}Boutique -
	{{parent()}}
{% endblock %}

{% block body %}
	{% set pageName = "Boutique" %}
	<div class="container-fluid m-0">
		{% include "partials/_pagetitle.html.twig" %}
	</div>

	<div class="container">

		<div class="row">

			<div class="col-lg-4 d-none d-lg-block">
				<div class="card" style="width: 18rem;">
					<div class="card-header h4 text-center bg-primary text-white">
						Catégorie
					</div>
					<ul class="list-group list-group-flush">
						{% for categorie in categories %}
							<li class="list-group-item">{{categorie.name}}</li>
						{% endfor %}
					</ul>
				</div>
				<div class="card-body mt-2">
					<form>
						<div class="form-row d-flex">
							<div class="form-group col-md-3 me-2">
								<input type="number" class="form-control" id="minPrice" name="minPrice" placeholder="Prix min">
							</div>
							<div class="form-group col-md-3 me-1">
								<input type="number" class="form-control" id="maxPrice" name="maxPrice" placeholder="Prix max">
							</div>
							<button type="submit" class="btn btn-primary">Filtrer</button>
						</div>

					</form>
				</div>
			</div>

			<div class="col-lg-8 col-12">

				<div class="row text-center d-none d-lg-block mb-3">
					<h3>Découvrez nos produits les plus populaires</h3>
				</div>
				<div class="row row-cols-1 row-cols-md-2 g-3">


					{% for product in products %}

						{% include "partials/_product_shop.html.twig" %}

					{% endfor %}

				</div>
			</div>

			<!--Pagination-->


		</div>
	</div>


{% endblock %}
