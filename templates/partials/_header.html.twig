<header>
	<nav class="navbar navbar-expand-lg navbar-light bg-light px-lg-3 py-lg-2 shadow-sm sticky-top">
		<div class="container-fluid">
			<a class="navbar-brand me-5 fw-bold fs-3 title-font" href="{{path('app_home')}}">ShOp</a>
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbarSupportedContent">
				<ul class="navbar-nav me-auto mb-2 mb-lg-0">
					<li class="nav-item">
						<a class="nav-link active me-3" aria-current="page" href="{{path('app_home')}}">ACCUEIL</a>
					</li>
					<li class="nav-item">
						<a class="nav-link me-3" href="#">SERVICES</a>
					</li>
					<li class="nav-item">
						<a class="nav-link me-3" href="#">NOS PRODUITS</a>
					</li>
					<li class="nav-item">
						<a class="nav-link me-3" href="#">A PROPOS</a>
					</li>
					<li class="nav-item">
						<a class="nav-link me-3" href="#">CONTACT</a>
					</li>
				</ul>

				{# gestion du panier#}
				<div class="dropdown mx-4">
					<a class="text-decoration-none" href="#" id="navbarDropdownCart" role="button" data-bs-toggle="dropdown" aria-expanded="false">
						<i class="bi bi-cart3" style="font-size: 22px;"></i>

						{% if app.session.get('cart') %}
							<span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-secondary">
								{{app.session.get('cartData').data.quantity_cart}}
							</span>
						{% endif %}


						<div class="dropdown-menu dropdown-menu-end p-0" aria-labelledby="navbarDropdownCart">
							<div class="card" style="width: 18rem;">
								<div class="card-body p-3">
									<ul class="list-unstyled mb-0">
										{% if app.session.get('cart') %}

											{% for element in app.session.get('cartData').products %}

												<li class="d-flex justify-content-between align-items-center mb-2">
													<div class="d-flex align-items-center">
														<img src="/assets/uploads/products/{{element.product.image}}" alt="{{element.product.name}}" class="me-2" style="max-width: 50px;">
														<div>
															<p class="mb-0">{{element.product.name}}</p>
															<p class="text-muted small mb-0">Prix:
																{{element.product.price /100}}
																€</p>
															<p class="text-muted small mb-0">Quantité:
																{{element.quantity}}</p>
														</div>
													</div>

													<a href="{{path('app_cart_remove',{'id':element.product.id})}}" type="button" class="btn btn-sm btn-outline-danger">
														<i class="bi bi-x-lg"></i>
													</a>
												</li>
											{% endfor %}
										</ul>
										{# Affichage du montant total#}
										<div class="card-footer p-3 text-center bg-white border-0">
											<p class="mb-0 text-dark fw-bold">
											Total TTC: {{app.session.get('cartData').data.subtotal}} €
											</p>
										</div>
										{#fin Affichage du montant total#}

									{% else %}
										<li class="d-flex justify-content-center align-items-center mb-2">
											<div class="d-flex align-items-center">
												<div>
													<p class="mb-0 text-dark text-center">Votre panier est vide</p>
												</div>
											</div>
										</li>
									{% endif %}
								</div>
								<div class="card-footer p-3 text-center">
									<a href="{{path('app_cart')}}" class="btn btn-primary btn-sm">Aller au panier</a>
									<a href="" class="btn btn-success btn-sm">Passer commande</a>

								</div>
							</div>
						</div>
					</div>


					{% if app.user %}
						<div class="d-flex">
							<ul class='navbar-nav'>
								<li class="nav-item">
									<a class="me-3 btn btn-sm  btn-outline-success" href="{{path('app_account')}}">
										<i class="bi bi-person mx-1"></i>Mon Compte</a>
								</li>
								<li class="nav-item">
									<a class="btn btn-sm  btn-outline-danger" href="{{path('app_logout')}}">
										<i class="bi bi-box-arrow-in-right mx-1"></i>Logout</a>
								</li>
							</ul>
						</div>

					{% else %}

						<div class="d-flex">
							<ul class='navbar-nav'>
								<li class="nav-item">
									<a class="me-3 btn btn-sm  btn-outline-primary" href="{{path('app_login')}}">
										<i class="bi bi-person mx-1"></i>S'identifier</a>
								</li>
								<li class="nav-item">
									<a class="btn btn-sm  btn-outline-secondary" href="{{path('app_register')}}">
										<i class="bi bi-box-arrow-in-right mx-1"></i>S'inscrire</a>
								</li>
							</ul>
						</div>
					{% endif %}
				</div>
				{#fin  gestion du panier#}

			</div>
		</nav>
	</header>
